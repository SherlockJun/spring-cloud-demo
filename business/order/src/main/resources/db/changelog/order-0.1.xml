<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create table order" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="spring_cloud_demo" tableName="order"/>
            </not>
        </preConditions>

        <createTable tableName="order">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="decimal(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="reward_points" type="decimal(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="consignee" type="varchar(50)"/>
            <column name="address" type="varchar(100)"/>
            <column name="phone_number" type="varchar(20)"/>
            <column name="version" type="bigint(20)"/>
            <column name="created_time" type="datetime" defaultValueComputed="current_timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="create table item" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="spring_cloud_demo" tableName="item"/>
            </not>
        </preConditions>

        <createTable tableName="item">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="int(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create table payment" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="spring_cloud_demo" tableName="payment"/>
            </not>
        </preConditions>

        <createTable tableName="payment">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint(20)"/>
            <column name="created_time" type="datetime" defaultValueComputed="current_timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="create table carrier" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="spring_cloud_demo" tableName="carrier"/>
            </not>
        </preConditions>

        <createTable tableName="carrier">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="initialize table carrier" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="carrier"/>
        </preConditions>

        <loadData tableName="carrier" file="classpath:db/changelog/data/carrier.csv" quotchar="'"/>
    </changeSet>

    <changeSet id="create table delivery" author="gavin-guo">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="spring_cloud_demo" tableName="delivery"/>
            </not>
        </preConditions>

        <createTable tableName="delivery">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="consignee" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="carrier_id" type="char(3)">
                <constraints nullable="false"/>
            </column>
            <column name="tracking_number" type="varchar(15)"/>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="bigint(20)"/>
            <column name="created_time" type="datetime" defaultValueComputed="current_timestamp"/>
        </createTable>
    </changeSet>

</databaseChangeLog>