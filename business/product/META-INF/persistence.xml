<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.gavin.business.domain.Category</class>
        <class>com.gavin.business.domain.Product</class>
        <class>com.gavin.business.domain.ProductStock</class>
        <class>com.gavin.business.domain.PointRewardPlan</class>
        <class>com.gavin.business.domain.ProductReservation</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/spring_cloud_demo"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
